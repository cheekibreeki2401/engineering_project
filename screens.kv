WindowManager:
    WelcomeWindow:
    MainWindow:

<WelcomeWindow>:
    name: "welcome"

    FloatLayout:

        Label:
            text: "Enter Location:"
            pos_hint: {'center_x': 0.2, 'center_y': .98}
            size_hint: .1,.1
        Label:
            text: "Location Name:"
            pos_hint: {'center_x': 0.2, 'center_y': .8}
            size_hint: .2,.2
        Label:
            id:DescriptionLabel
            text: ""
            pos_hint: {'center_x': 0.2, 'center_y': .5}
            size_hint: .2,.2

        TextInput:
            id:NameInput
            pos_hint: {'center_x': 0.5, 'center_y': .8}
            size_hint: .3,.05

        Button:
            text: "Search"
            size_hint: 0.15,0.1
            pos_hint: {'center_x': 0.85, 'center_y': .9}
            on_release:
                root.on_press_button()


<MainWindow>:
    name: "main"

    FloatLayout:

        Label:
            id:TimeLabel
            text: "Time:"
            pos_hint: {'center_x': 0.5, 'center_y': .7}
            size_hint: .2,.2
        Label:
            id:RainLabel
            text: "Rain:"
            pos_hint: {'center_x': 0.5, 'center_y': .6}
            size_hint: .2,.2
        Label:
            id:WindLabel
            text: "Wind:"
            pos_hint: {'center_x': 0.5, 'center_y': .5}
            size_hint: .2,.2
        Label:
            id:HumidityLabel
            text: "Humidity:"
            pos_hint: {'center_x': 0.5, 'center_y': .4}
            size_hint: .2,.2
        Label:
            id:TemperatureLabel
            text: "Temperature:"
            pos_hint: {'center_x': 0.5, 'center_y': .3}
            size_hint: .2,.2
        Label:
            id:SkyLabel
            text: "Condition:"
            pos_hint: {'center_x': 0.5, 'center_y': .2}
            size_hint: .2,.2

        Button:
            text: "Go Back"
            size_hint: 0.15,0.1
            pos_hint: {'center_x': 0.1, 'center_y': .95}
            on_release:
                app.root.current = "welcome"
                root.manager.transition.direction = "right"
